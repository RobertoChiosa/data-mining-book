journal = {IEEE Transactions on Knowledge and Data Engineering},
keywords = {SAX,auto-correlation,discretization,time series analysis},
number = {4},
pages = {1162--1166},
title = {{SAX Discretization Does Not Guarantee Equiprobable Symbols}},
volume = {27},
year = {2015}
}
